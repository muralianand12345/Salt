{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "useUnknownInCatchVariables": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src"
    ]
}